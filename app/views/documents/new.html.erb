<h2> Enter Name</h2>

<%= form_for @document do |f| %>

  <div class="field">
    <%= f.label :First_Name %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :Last_Name %><br />
    <%= f.text_field :lname %>
  </div>
  <% i=0 %>  
  <%= f.fields_for :addresses do |ff| %>
    <%= "Address"+"#{i+=1}"  %>
    <div class="field">
      <%= f.label :City %><br />    
      <%= ff.text_field :city %><br>
    </div>
    <div class="field">  
      <%= f.label :State %><br />    
      <%= ff.text_field :state %><br>
    </div>  
    <div class="field">
      <%= f.label :Country %><br />
      <%= ff.text_field :country %><br>
    </div>
  <% end %>
    <div class="actions">
      <%= f.submit "save me"%>
    </div>

<% end %>