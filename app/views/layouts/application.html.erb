<!DOCTYPE html>
<html>
<head>
  <title><%= (yield :title) %> </title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] || flash[:error] %>
      <script>
        $(document).ready(function() {
          <% if flash[:notice] %>
          application.addMessage( '<%= flash[:notice] %>', 'notice' );
          <% end %>
          <% if flash[:error] %>
            <% if flash[:alert].present? %>
              application.addMessage( '<%= flash[:alert] %>', 'error' );
            <% else %>
              application.addMessage( '<%= flash[:error] %>', 'error' );
             <% end %>
          <% end %>
        });
      </script>
<% end %>
<%= link_to 'logout', logout_path, :method =>'delete' %>
<% render 'layouts/header'%>
<%= yield %>
</body>
</html>
